<h2>プロフィール登録</h2>

<%= form_for (@prof) do |f| %>


    <div class="form-group">
        <label>名前</label><br />
        <%= f.text_field :name, size: 20 %>
    </div>

    <div class="form-group">
        <label>性別</label><br />
        <%= f.radio_button :gender, 0 %>
        <%= f.label :gender_0, "男" %>
        <%= f.radio_button :gender, 1 %>
        <%= f.label :gender_1, "女" %>
    </div>

    <div class="form-group">
        <label>年齢</label><br />
        <%= f.text_field :age, size: 16 %>      
    </div>

    <div class="form-group">
        <label>住まい</label><br />
        <%= f.text_field :live, size: 16 %>
    </div>

    <div class="form-group">
        <label>自己紹介文</label><br />
        <%= f.text_area :introduce, cols: 40, rows: 4 %>
    </div>

    <div class="form-group">
        <%= f.submit '登録する', class:"btn btn-primary" %>
    </div>

<% end %>
