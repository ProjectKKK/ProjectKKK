<!DOCTYPE html>
<html>
<head>
  <title>ProjectK</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" media="(max-width: 480px)" href="media-query-mobile.scss">
  <meta name="viewport" content="width=device-width,initial-scale=1.0,minimum-scale=1.0,user-scalable=no">

</head>
<body style="padding-top: 90px;,font-family: 'Lucida Console';">

  <div class="main-container">

	<header>
	  <nav class="navbar navbar-default navbar-fixed-top navbar-top">
		  <div class="container-fluid">
		           <form class="navbar-form navbar-left" role="search">
					  <div class="form-group">
					     <input type="text" class="form-control" placeholder= "Poi'をさがす">
					  </div>
					  <button type="submit" class="btn btn-default"><i class="fa fa-search" aria-hidden="true"></i></button>
				  </form>
				  <h1 class="logo"><%= link_to "Poi'!","/" %></h1>	
			      <div class="collapse navbar-collapse navbar-right" id="navbarExmple1">
				      <ul class="nav navbar-nav">
				      	<% if user_signed_in? %>
					     <li><%= link_to "Poi'!する","/posts/new" %></li>
					     <li><%= link_to current_user.email, new_prof_path %>こんにちは</li>
					     <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
					    <% else %>
					     <li><%= link_to "ログイン","/users/sign_in" %></li>
					     <li><%= link_to "新規登録","/users/sign_up" %></li>
					    <% end %>
				     </ul>
			      </div>
		  </div>
	  </nav>
	</header>

  <div class="container-fluid main-padding">
  	 <div class="row">
  	   <div class="col-sm-2">
  	     <ul class="list-group">
  	       <li class="list-group-item">カテゴリー</li>
  	       <li class="list-group-item"><%= link_to "日用品","/" %></li>
  	       <li class="list-group-item"><%= link_to "インテリア","/" %></li>
  	       <li class="list-group-item"><%= link_to "ホビー","/" %></li>
  	       <li class="list-group-item"><%= link_to "家電","/" %></li>
  	       <li class="list-group-item"><%= link_to "レジャー","/" %></li>
  	       <li class="list-group-item"><%= link_to "自動車","/" %></li>
  	       <li class="list-group-item"><%= link_to "その他","/" %></li>
  	     </ul>
  	   </div>
	   <div class="col-sm-10"><%= yield %></div>
	 </div>
  </div>

  <div class="watermark2"></div>
  <footer>
  	2016 ProjectK,Inc. ALL Rights Reserved
  </footer>

  </div>

</body>
</html>
