<% if @post.errors.any? %>
  <div id="error_explanation", class="alert alert-danger">
    <h2><%= @post.errors.count %>件、未入力です</h2>
 
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>

  </div>
<% end %>

<%= form_for (@post) do |f| %>
		<label>画像</label>
			 <%= f.file_field :image, class:"form-control" %>
		<label>動画</label>
			 <%= f.file_field :movie, :accept => 'video/*', class:"form-control" %>


		<div class="form-group">
			 <label>商品名</label>
		  	 <%= f.text_field :name, class: "form-control" %>
		</div>

		<div class="form-group">
			 <label>説明文</label>
		  	 <%= f.text_area :description, class: "form-control", :style => "rows:5;"%>
		</div>

		<div class="form-group">
			 <label>URL</label>
		  	 <%= f.url_field :where, class: "form-control" %>
		</div>

		<div class="form-group">
		 	 <%= f.label :category_list, "タグを選んでください(Enter押してください)  日用品,インテリア,ホビー,家電,レジャー,自動車,その他" %><br>
		  	 <%= text_field_tag 'post[category_list]', @post.category_list.join(','), "data-role"=>"tagsinput" %>
		</div>

		<div class="form-gruop">
		  	 <%= f.submit '保存', class: "btn btn-primary" %>
		</div>
<% end %>
