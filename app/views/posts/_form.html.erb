<%= form_for (@post) do |f| %>
		<label>画像</label>
			 <%= f.file_field :image, class:"form-control" %>
		<label>動画</label>
			 <%= f.file_field :movie, :accept => 'video/*', class:"form-control" %>


		<div class="form-group">
			 <label>商品名</label>
		  	 <%= f.text_field :name, class: "form-control" %>
		</div>

		<div class="form-group">
			 <label>説明文</label>
		  	 <%= f.text_area :description, class: "form-control", :style => "rows:5;"%>
		</div>

		<div class="form-group">
			 <label>URL</label>
		  	 <%= f.url_field :where, class: "form-control" %>
		</div>

		<div class="form-gruop">
		  	 <%= f.submit '保存', class: "btn btn-primary" %>
		</div>
<% end %>
